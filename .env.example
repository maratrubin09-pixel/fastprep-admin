# Node.js Configuration
NODE_ENV=production
NODE_OPTIONS=--dns-result-order=ipv4first

# Database
DATABASE_URL=postgresql://user:password@host:5432/fastprep_admin

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here
CSRF_SECRET=your-csrf-secret-here

# CORS & Origin
APP_ORIGIN=https://admin.fastprepusa.com
CORS_ORIGIN=https://admin.fastprepusa.com

# S3 Storage (Cloudflare R2 or AWS S3)
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
S3_REGION=auto
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Telegram Adapter
TG_ADAPTER_URL=https://fastprep-tg-adapter.onrender.com
TG_ADAPTER_TOKEN=your-adapter-token

# WhatsApp/Baileys
BAILEYS_DIR=/var/data/baileys

# Worker Configuration
OUTBOX_BATCH_SIZE=10
OUTBOX_CONCURRENCY=5
OUTBOX_MAX_ATTEMPTS=5
OUTBOX_BASE_BACKOFF_MS=1000
OUTBOX_MAX_BACKOFF_MS=60000
METRICS_PORT=9090

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
FAIL_ALERT_THRESHOLD=10
FAIL_ALERT_WINDOW_SEC=300
FAIL_ALERT_COOLDOWN_SEC=3600
